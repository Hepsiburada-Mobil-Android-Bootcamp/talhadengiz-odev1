<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="recyclerview_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/space_8</item>
        <item name="android:layout_marginTop">@dimen/space_20</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="view_more">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/space_8</item>
        <item name="android:layout_marginTop">@dimen/space_20</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="edittext_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space_24</item>
        <item name="android:background">@drawable/bg_edittext</item>
    </style>
    <style name="button_login">
        <item name="android:layout_width">@dimen/space_152</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_20</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:drawablePadding">@dimen/space_8</item>
        <item name="android:padding">@dimen/space_24</item>
    </style>
</resources>